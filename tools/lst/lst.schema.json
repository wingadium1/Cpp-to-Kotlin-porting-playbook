{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/lst.schema.json",
  "title": "Lossless Semantic Tree",
  "type": "object",
  "required": ["version", "file", "source_hash", "source_length", "nodes"],
  "properties": {
    "version": {"type": "string"},
    "file": {"type": "string"},
    "source_hash": {"type": "string"},
    "source_length": {"type": "integer"},
    "nodes": {
      "type": "array",
      "items": { "$ref": "#/definitions/node" }
    }
  },
  "definitions": {
    "span": {
      "type": "object",
      "required": ["start_byte", "end_byte", "start_line", "end_line"],
      "properties": {
        "start_byte": {"type": "integer", "minimum": 0},
        "end_byte": {"type": "integer", "minimum": 0},
        "start_line": {"type": "integer", "minimum": 1},
        "end_line": {"type": "integer", "minimum": 1}
      }
    },
    "node": {
      "type": "object",
      "required": ["kind", "span", "text", "children"],
      "properties": {
        "kind": {"type": "string"},
        "name": {"type": ["string", "null"]},
        "span": { "$ref": "#/definitions/span" },
        "header_span": {"anyOf": [{"type": "null"}, { "$ref": "#/definitions/span" }]},
        "body_span": {"anyOf": [{"type": "null"}, { "$ref": "#/definitions/span" }]},
        "header": {"type": ["string", "null"]},
        "text": {"type": "string"},
        "children": {"type": "array", "items": { "$ref": "#/definitions/node" }}
      }
    }
  }
}
